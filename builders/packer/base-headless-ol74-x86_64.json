{
  "builders": [
    {
      "boot_command": [
        "<tab> text ks=http://{{ .HTTPIP }}:{{ .HTTPPort }}/{{user `ks_path`}}<enter><wait>"
      ],
      "boot_wait": "10s",
      "disk_size": "{{user `disk_size`}}",
      "guest_additions_path": "VBoxGuestAdditions_{{.Version}}.iso",
      "guest_os_type": "Oracle_64",
      "hard_drive_interface": "sata",
      "headless": "{{ user `headless` }}",
      "http_directory": "http",
      "iso_checksum": "{{user `iso_checksum`}}",
      "iso_checksum_type": "{{user `iso_checksum_type`}}",
      "iso_url": "{{user `mirror`}}/{{user `mirror_directory`}}/{{user `iso_name`}}",
      "output_directory": "../../artifacts/{{user `box_basename`}}",
      "post_shutdown_delay": "{{user `post_shutdown_delay`}}",
      "shutdown_command": "echo 'vagrant' | sudo -S /sbin/halt -h -p",
      "ssh_password": "vagrant",
      "ssh_port": 22,
      "ssh_username": "vagrant",
      "ssh_wait_timeout": "10000s",
      "type": "virtualbox-iso",
      "vboxmanage": [
        ["modifyvm", "{{.Name}}", "--memory", "{{ user `memory` }}"],
        ["modifyvm", "{{.Name}}", "--cpus", "{{ user `cpus` }}"]
      ],
      "virtualbox_version_file": ".vbox_version",
      "vm_name": "{{ user `box_basename` }}"
    }
  ],
  "post-processors": [
    {
      "output": "../../artifacts/{{user `box_basename`}}/{{user `box_basename`}}.{{.Provider}}.box",
      "type": "vagrant"
    },
    {
      "output": "../../artifacts/manifest.json",
      "type": "manifest"
    }
  ],
  "provisioners": [
    {
      "inline": ["mkdir -p /tmp/scripts/oracle"],
      "type": "shell"
    },
    {
      "destination": "/tmp/scripts/oracle",
      "source": "../../provisioners/scripts/oracle/",
      "type": "file"
    },
    {
      "environment_vars": [
        "HOME_DIR=/home/vagrant",
        "http_proxy={{user `http_proxy`}}",
        "https_proxy={{user `https_proxy`}}",
        "no_proxy={{user `no_proxy`}}"
      ],
      "execute_command": "echo 'vagrant' | {{.Vars}} sudo -S -E sh -eux '{{.Path}}'",
      "expect_disconnect": true,
      "scripts": [
        "../../submodules/chef/bento/scripts/centos/networking.sh",
        "../../submodules/chef/bento/scripts/common/sshd.sh",
        "../../submodules/chef/bento/scripts/common/vagrant.sh",
        "../../provisioners/scripts/oracle/install_ol7_oracle_uekr4.sh"
      ],
      "type": "shell"
    },
    {
      "expect_disconnect": true,
      "inline": [
        "sudo rpm -qa | grep kernel-3 | sort",
        "sudo yum -y remove kernel-3*",
        "sudo systemctl reboot"
      ],
      "type": "shell"
    },
    {
      "environment_vars": [
        "HOME_DIR=/home/vagrant",
        "http_proxy={{user `http_proxy`}}",
        "https_proxy={{user `https_proxy`}}",
        "no_proxy={{user `no_proxy`}}"
      ],
      "execute_command": "echo 'vagrant' | {{.Vars}} sudo -S -E sh -eux '{{.Path}}'",
      "expect_disconnect": true,
      "pause_before": "10s",
      "scripts": [
        "../../submodules/chef/bento/scripts/common/virtualbox.sh",
        "../../provisioners/scripts/oracle/install_ol7_headless_devops_tools.sh",
        "../../provisioners/scripts/oracle/install_ol7_oracle_java_jdk.sh",
        "../../provisioners/scripts/oracle/install_ol7_docker.sh",
        "../../provisioners/scripts/oracle/install_ol7_python3.sh",
        "../../provisioners/scripts/oracle/install_ol7_headless_users_env.sh",
        "../../provisioners/scripts/oracle/cleanup.sh",
        "../../submodules/chef/bento/scripts/common/minimize.sh"
      ],
      "type": "shell"
    },
    {
      "inline": [
        "sudo usermod -aG vboxsf vagrant",
        "sudo plymouth-set-default-theme details",
        "sudo dracut -f"
      ],
      "type": "shell"
    }
  ],
  "variables": {
    "arch": "64",
    "box_basename": "base-headless-ol74",
    "build_timestamp": "{{isotime \"20060102150405\"}}",
    "cpus": "1",
    "disk_size": "65536",
    "git_revision": "__unknown_git_revision__",
    "headless": "false",
    "http_proxy": "{{env `http_proxy`}}",
    "https_proxy": "{{env `https_proxy`}}",
    "iso_checksum": "F2E11A2FCEBA8E285490C8DF7C2172336CC23EB4BAB95924B98D1029DCE7EB0B",
    "iso_checksum_type": "sha256",
    "iso_name": "OracleLinux-R7-U4-Server-x86_64-dvd.iso",
    "ks_path": "oracle-linux-7.4/ol74-headless-ks.cfg",
    "memory": "4096",
    "mirror": "http://mirrors.dotsrc.org/oracle-linux",
    "mirror_directory": "OL7/u4/x86_64",
    "name": "base-headless-ol74",
    "no_proxy": "{{env `no_proxy`}}",
    "post_shutdown_delay": "10s",
    "version": "TIMESTAMP"
  }
}
