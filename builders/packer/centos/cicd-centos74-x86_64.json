{
  "builders": [
    {
      "boot_wait": "10s",
      "guest_additions_path": "VBoxGuestAdditions_{{.Version}}.iso",
      "headless": "{{ user `headless` }}",
      "source_path": "../../../artifacts/centos/ops-centos74/ops-centos74.ovf",
      "output_directory": "../../../artifacts/centos/{{user `box_basename`}}",
      "shutdown_command": "echo 'vagrant' | sudo -S /sbin/halt -h -p",
      "ssh_password": "vagrant",
      "ssh_port": 22,
      "ssh_username": "vagrant",
      "ssh_wait_timeout": "10000s",
      "type": "virtualbox-ovf",
      "vboxmanage": [
        ["modifyvm", "{{.Name}}", "--memory", "{{ user `memory` }}"],
        ["modifyvm", "{{.Name}}", "--cpus", "{{ user `cpus` }}"]
      ],
      "virtualbox_version_file": ".vbox_version",
      "vm_name": "{{ user `box_basename` }}"
    }
  ],
  "post-processors": [
    {
      "output": "../../../artifacts/centos/{{user `box_basename`}}/{{user `box_basename`}}.{{.Provider}}.box",
      "type": "vagrant"
    },
    {
      "output": "../../../artifacts/centos/manifest.json",
      "type": "manifest"
    }
  ],
  "provisioners": [
    {
      "inline": ["mkdir -p /tmp/scripts"],
      "type": "shell"
    },
    {
      "destination": "/tmp/scripts",
      "source": "../../../provisioners/scripts/",
      "type": "file"
    },
    {
      "expect_disconnect": true,
      "inline": [
        "sudo yum -y update",
        "sudo hostnamectl set-hostname cicd --static",
        "sudo hostnamectl set-hostname cicd",
        "sudo hostnamectl status",
        "sudo systemctl reboot"
      ],
      "type": "shell"
    },
    {
      "environment_vars": [
        "HOME_DIR=/home/vagrant",
        "http_proxy={{user `http_proxy`}}",
        "https_proxy={{user `https_proxy`}}",
        "no_proxy={{user `no_proxy`}}"
      ],
      "execute_command": "echo 'vagrant' | {{.Vars}} sudo -S -E sh -eux '{{.Path}}'",
      "expect_disconnect": true,
      "pause_before": "10s",
      "scripts": [
        "../../../provisioners/scripts/centos/install_centos7_gitlab.sh",
        "../../../provisioners/scripts/centos/install_centos7_jenkins.sh",
        "../../../provisioners/scripts/centos/cleanup.sh",
        "../../../submodules/chef/bento/_common/minimize.sh"
      ],
      "type": "shell"
    }
  ],
  "variables": {
    "box_basename": "cicd-centos74",
    "build_timestamp": "{{isotime \"20060102150405\"}}",
    "cpus": "2",
    "git_revision": "__unknown_git_revision__",
    "headless": "false",
    "http_proxy": "{{env `http_proxy`}}",
    "https_proxy": "{{env `https_proxy`}}",
    "memory": "6144",
    "name": "cicd-centos74",
    "no_proxy": "{{env `no_proxy`}}",
    "version": "TIMESTAMP"
  }
}
