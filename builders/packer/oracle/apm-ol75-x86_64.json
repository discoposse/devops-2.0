{
  "builders": [
    {
      "boot_wait": "10s",
      "guest_additions_path": "VBoxGuestAdditions_{{.Version}}.iso",
      "headless": "{{ user `headless` }}",
      "source_path": "../../../artifacts/oracle/base-headless-ol75/base-headless-ol75.ovf",
      "output_directory": "../../../artifacts/oracle/{{user `box_basename`}}",
      "shutdown_command": "echo 'vagrant' | sudo -S /sbin/halt -h -p",
      "ssh_password": "vagrant",
      "ssh_port": 22,
      "ssh_username": "vagrant",
      "ssh_wait_timeout": "10000s",
      "type": "virtualbox-ovf",
      "vboxmanage": [
        ["modifyvm", "{{.Name}}", "--memory", "{{ user `memory` }}"],
        ["modifyvm", "{{.Name}}", "--cpus", "{{ user `cpus` }}"]
      ],
      "virtualbox_version_file": ".vbox_version",
      "vm_name": "{{ user `box_basename` }}"
    }
  ],
  "post-processors": [
    {
      "output": "../../../artifacts/oracle/{{user `box_basename`}}/{{user `box_basename`}}.{{.Provider}}.box",
      "type": "vagrant"
    },
    {
      "output": "../../../artifacts/oracle/manifest.json",
      "type": "manifest"
    }
  ],
  "provisioners": [
    {
      "inline": [
        "sudo mkdir -p {{ user `devops_home` }}/provisioners/scripts",
        "sudo chown -R vagrant:vagrant {{ user `devops_home` }}"
      ],
      "type": "shell"
    },
    {
      "destination": "{{ user `devops_home` }}/provisioners/scripts",
      "source": "../../../provisioners/scripts/",
      "type": "file"
    },
    {
      "inline": ["sudo chown -R root:root {{ user `devops_home` }}"],
      "type": "shell"
    },
    {
      "expect_disconnect": true,
      "inline": [
        "sudo yum -y update",
        "sudo hostnamectl set-hostname apm --static",
        "sudo hostnamectl set-hostname apm",
        "sudo hostnamectl status",
        "sudo systemctl reboot"
      ],
      "type": "shell"
    },
    {
      "environment_vars": [
        "appd_admin_password={{user `appd_admin_password`}}",
        "appd_db_password={{user `appd_db_password`}}",
        "appd_db_root_password={{user `appd_db_root_password`}}",
        "appd_password={{user `appd_password`}}",
        "appd_platform_name={{user `appd_platform_name`}}",
        "appd_platform_description={{user `appd_platform_description`}}",
        "appd_username={{user `appd_username`}}",
        "devops_home={{user `devops_home`}}",
        "HOME_DIR=/home/vagrant",
        "http_proxy={{user `http_proxy`}}",
        "https_proxy={{user `https_proxy`}}",
        "no_proxy={{user `no_proxy`}}"
      ],
      "execute_command": "echo 'vagrant' | {{.Vars}} sudo -S -E sh -eux '{{.Path}}'",
      "expect_disconnect": true,
      "pause_before": "10s",
      "scripts": [
        "../../../provisioners/scripts/centos/install_centos7_oracle_mysql_shell_8.sh",
        "../../../provisioners/scripts/centos/install_centos7_appdynamics_enterprise_console.sh",
        "../../../provisioners/scripts/common/install_appdynamics_platform_services.sh",
        "../../../provisioners/scripts/centos/cleanup.sh",
        "../../../submodules/chef/bento/_common/minimize.sh"
      ],
      "type": "shell"
    }
  ],
  "variables": {
    "appd_admin_password": "{{env `appd_admin_password`}}",
    "appd_db_password": "{{env `appd_db_password`}}",
    "appd_db_root_password": "{{env `appd_db_root_password`}}",
    "appd_password": "{{env `appd_password`}}",
    "appd_platform_name": "{{env `appd_platform_name`}}",
    "appd_platform_description": "{{env `appd_platform_description`}}",
    "appd_username": "{{env `appd_username`}}",
    "box_basename": "apm-ol75",
    "build_timestamp": "{{isotime \"20060102150405\"}}",
    "cpus": "2",
    "devops_home": "/opt/devops-2.0",
    "git_revision": "__unknown_git_revision__",
    "headless": "false",
    "http_proxy": "{{env `http_proxy`}}",
    "https_proxy": "{{env `https_proxy`}}",
    "memory": "10240",
    "name": "apm-ol75",
    "no_proxy": "{{env `no_proxy`}}",
    "version": "TIMESTAMP"
  }
}
