{
  "builders": [
    {
      "boot_wait": "10s",
      "guest_additions_path": "VBoxGuestAdditions_{{.Version}}.iso",
      "headless": "{{ user `headless` }}",
      "source_path": "../../artifacts/base-headless-ol73/base-headless-ol73.ovf",
      "output_directory": "../../artifacts/{{user `box_basename`}}",
      "post_shutdown_delay": "{{user `post_shutdown_delay`}}",
      "shutdown_command": "echo 'vagrant' | sudo -S /sbin/halt -h -p",
      "ssh_password": "vagrant",
      "ssh_port": 22,
      "ssh_username": "vagrant",
      "ssh_wait_timeout": "10000s",
      "type": "virtualbox-ovf",
      "vboxmanage": [
        ["modifyvm", "{{.Name}}", "--memory", "{{ user `memory` }}"],
        ["modifyvm", "{{.Name}}", "--cpus", "{{ user `cpus` }}"]
      ],
      "virtualbox_version_file": ".vbox_version",
      "vm_name": "{{ user `box_basename` }}"
    }
  ],
  "post-processors": [
    {
      "output": "../../artifacts/{{user `box_basename`}}/{{user `box_basename`}}.{{.Provider}}.box",
      "type": "vagrant"
    },
    {
      "output": "../../artifacts/manifest.json",
      "type": "manifest"
    }
  ],
  "provisioners": [
    {
      "inline": ["mkdir -p /tmp/scripts/oracle"],
      "type": "shell"
    },
    {
      "destination": "/tmp/scripts/oracle",
      "source": "../scripts/oracle/",
      "type": "file"
    },
    {
      "environment_vars": [
        "HOME_DIR=/home/vagrant",
        "http_proxy={{user `http_proxy`}}",
        "https_proxy={{user `https_proxy`}}",
        "no_proxy={{user `no_proxy`}}"
      ],
      "execute_command": "echo 'vagrant' | {{.Vars}} sudo -S -E sh -eux '{{.Path}}'",
      "pause_before": "10s",
      "scripts": [
        "../scripts/oracle/bootstrap_ol7_apache_ant.sh",
        "../scripts/oracle/bootstrap_ol7_apache_maven.sh",
        "../scripts/oracle/bootstrap_ol7_gradle.sh",
        "../scripts/oracle/bootstrap_ol7_ansible.sh",
        "../scripts/oracle/bootstrap_ol7_google_golang.sh",
        "../scripts/oracle/bootstrap_ol7_hashicorp_consul.sh",
        "../scripts/oracle/bootstrap_ol7_hashicorp_packer.sh",
        "../scripts/oracle/bootstrap_ol7_hashicorp_terraform.sh",
        "../scripts/oracle/bootstrap_ol7_hashicorp_vault.sh",
        "../scripts/oracle/bootstrap_ol7_git.sh",
        "../scripts/oracle/bootstrap_ol7_cloud_init.sh",
        "../scripts/oracle/cleanup.sh",
        "scripts/common/minimize.sh"
      ],
      "type": "shell"
    }
  ],
  "variables": {
    "arch": "64",
    "box_basename": "ops-ol73",
    "build_timestamp": "{{isotime \"20060102150405\"}}",
    "cpus": "1",
    "git_revision": "__unknown_git_revision__",
    "headless": "false",
    "http_proxy": "{{env `http_proxy`}}",
    "https_proxy": "{{env `https_proxy`}}",
    "memory": "4096",
    "name": "ops-ol73",
    "no_proxy": "{{env `no_proxy`}}",
    "post_shutdown_delay": "10s",
    "version": "2.2.TIMESTAMP"
  }
}
